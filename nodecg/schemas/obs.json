{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "Connected OBS data",
  "default": {
    "scenes": []
  },
  "required": [
    "scenes",
    "wsStatus",
    "automaticReconnect"
  ],
  "properties": {
    "scenes": {
      "$id": "#/obs/scenes",
      "type": "array",
      "title": "Scenes",
      "items": {
        "$id": "#/obs/sceneItem",
        "type": "object",
        "required": [
          "sceneIndex",
          "sceneName",
          "sceneUuid"
        ],
        "additionalProperties": false,
        "properties": {
          "sceneIndex": {
            "type": "integer"
          },
          "sceneName": {
            "type": "string"
          },
          "sceneUuid": {
            "type": "string"
          }
        }
      }
    }
  },
  "additionalProperties": false
}
