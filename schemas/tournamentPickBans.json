{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "tournament picks and bans",
  "type": "object",
  "patternProperties": {
    "^[0-9]+$": {
      "$id": "#/properties/pickban",
      "type": "object",
      "properties": {
        "color": {
          "type": "string",
          "enum": ["red", "blue"]
        },
        "type": {
          "type": "string",
          "enum": ["pick", "ban"]
        },
        "time": {
          "type": "integer"
        },
        "beatmap_id": {
          "type": "integer"
        }
      },
      "required": ["color", "type", "time", "beatmap_id"],
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
